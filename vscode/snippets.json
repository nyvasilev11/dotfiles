{
  // Place your global snippets here. Each snippet is defined under a snippet name and has a scope, prefix, body and
  // description. Add comma separated ids of the languages where the snippet is applicable in the scope field. If scope
  // is left empty or omitted, the snippet gets applied to all languages. The prefix is what is
  // used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders.
  // Placeholders with the same ids are connected.
  // Example:
  // "Print to console": {
  // 	"scope": "javascript,typescript",
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  // Basic methods
  "simple import module": {
    "prefix": "imp",
    "body": "import $1 from '$0';",
    "description": "simple import"
  },
  "export simple arrow function": {
    "prefix": "exf",
    "body": "export const $1 = ($2) => { };",
    "description": "export simple function"
  },
  "Arrow function": {
    "prefix": "nfn",
    "body": "const $1 = ($2) => { };",
    "description": "Arrow function"
  },
  "Object destructuring": {
    "prefix": "dob",
    "body": "const { $1 } = $2;",
    "description": "Object destructuring"
  },
  "Array destructuring": {
    "prefix": "dar",
    "body": "const [ $1 ] = $2;",
    "description": "Array destructuring"
  },
  "comment block": {
    "prefix": "cmmb",
    "body": [
      "/**",
      "|--------------------------------------------------",
      "| $1",
      "|--------------------------------------------------",
      "*/"
    ],
    "description": "comment block"
  },
  // Console
  "console log": {
    "prefix": "clg",
    "body": "console.log($1);",
    "description": "console log"
  },
  "console log with object": {
    "prefix": "clo",
    "body": "console.log('$1', $2);",
    "description": "console log"
  },
  // React
  "import React": {
    "prefix": "imr",
    "body": "import React from 'react';",
    "description": "import React"
  },
  "import React Component within from react": {
    "prefix": "imrc",
    "body": "import React, { $1 } from 'react';",
    "description": "import React Component from react"
  },
  // Functions and Components
  "Arrow function component with proptypes": {
    "prefix": "rafcp",
    "body": [
      "import React from 'react';",
      "import PropTypes from 'prop-types';",
      "const $1 = (props) => {",
      "return <div>$0</div>;",
      "};",
      "$1.propTypes = {};",
      "export default $1;"
    ],
    "description": "function component with proptypes"
  },
  "simple arrow function": {
    "prefix": "rafc",
    "body": [
      "import React from 'react';",
      "export const $1 = () => {",
      "return <div>$0</div>;",
      "};"
    ],
    "description": "simple function"
  },
  "Arrow function component": {
    "prefix": "rafce",
    "body": [
      "import React from 'react';",
      "const $1 = () => {",
      "return <div>$0</div>;'",
      "}",
      "export default $1;"
    ],
    "description": "function component"
  }
}
